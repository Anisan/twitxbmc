		<info compressed="false">http://xbmcadult.googlecode.com/svn/addons/addons.xml</info>
		<checksum>http://xbmcadult.googlecode.com/svn/addons/addons.xml.md5</checksum>
		<datadir zip="false">http://xbmcadult.googlecode.com/svn/addons</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>XBMC Addons Eraser's</summary>
