<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.eraser" name="XBMC Eraser's Addons" version="1.0.0" provider-name="eraser">
	<extension point="xbmc.addon.repository" name="XBMC Eraser's Addons">
		<info compressed="false">http://twitxbmc.googlecode.com/svn/addons/addons.xml</info>
		<checksum>http://twitxbmc.googlecode.com/svn/addons/addons.xml.md5</checksum>
		<datadir zip="false">http://twitxbmc.googlecode.com/svn/addons</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>XBMC Addons Eraser's</summary>
		<description>Install Add-ons from Eraser</description>
		<disclaimer>Download and install Add-ons from Eraser</disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="script.twitXBMC"
       name="twitXBMC"
       version="0.0.6"
       provider-name="Eraser">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Twitter client</summary>
    <description lang="en">Twitter client - send status, view friends timeline</description>
    <platform>all</platform>
  </extension>
</addon>

<addon
  id="plugin.image.oboobs"
  version="0.0.6"
  name="Oboobs.ru"
  provider-name="Eraser®">
  <requires>
        <import addon="xbmc.python" version="1.0"/>
  </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>image</provides>
    </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Oboobs.ru</summary>
    <description lang="en">Pictures from Oboobs.ru</description>
    <summary lang="en">Oboobs.ru</summary>
    <description lang="en">Изображения с сайта Oboobs.ru</description>
    </extension>
</addon>
</addons>
